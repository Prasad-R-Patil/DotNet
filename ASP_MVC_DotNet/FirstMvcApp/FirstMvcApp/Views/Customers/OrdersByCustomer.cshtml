@model IEnumerable<Order>
@{
    ViewBag.Title = "Customer Orders List!";
}

<div>
    @if (Model.Count() > 0)
    {


        <h1>Orders Placed by Customer!</h1>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Order Id</th>
                    <th>Order Date</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate</td>
                        <td>@order.Quantity</td>
                        <td>@order.UnitPrice</td>
                        <td>@order.Quantity*@order.UnitPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>This customer has no order!</h3>    
    }
</div>