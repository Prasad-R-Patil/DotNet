@{
    ViewData["Title"] = "Home - ShoeKart";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1;
    }

    .hero {
        background: url('/Images/shoes-banner.jpg') no-repeat center center/cover;
        color: white;
        text-align: center;
        padding: 100px 20px;
        position: relative;
    }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 700;
        }

        .hero p {
            font-size: 1.3rem;
            margin-bottom: 30px;
        }

        .hero::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 0;
        }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .card-img-top {
        height: 230px;
        object-fit: contain;
        transition: transform 0.3s ease-in-out;
        padding: 12px;
    }

        .card-img-top:hover {
            transform: scale(1.08);
        }

    .card {
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    footer {
        background-color: #343a40;
        color: white;
        text-align: center;
        padding: 20px 0;
    }

        footer a {
            color: #ccc;
            text-decoration: none;
        }

            footer a:hover {
                color: white;
            }
</style>

<main>
   
    <section class="hero">
        <div class="hero-content">
            <h1>Step into Style</h1>
            <p>Premium shoes for every step – casual, formal, and sportswear</p>
            <a href="/Products" class="btn btn-warning btn-lg">Start Shopping</a>
        </div>
    </section>

    <div class="container mt-5 mb-5">
        <h2 class="text-center mb-4 text-primary">Top Picks for You</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">

            <!-- Product 1 -->
            <div class="col">
                <div class="card h-100 text-center">
                    <img src="~/Images/bata_b_m_1.jpg" class="card-img-top" alt="Bata Shoes">
                    <div class="card-body">
                        <h5 class="card-title">Bata Classic</h5>
                        <p class="card-text">Affordable and durable formal shoes.</p>
                        <a href="/Products/Details/1" class="btn btn-outline-dark">View Details</a>
                    </div>
                </div>
            </div>

            <!-- Product 2 -->
            <div class="col">
                <div class="card h-100 text-center">
                    <img src="~/Images/campus_b_m_1.jpg" class="card-img-top" alt="Campus Shoes">
                    <div class="card-body">
                        <h5 class="card-title">Campus Bold</h5>
                        <p class="card-text">Sporty shoes for everyday comfort.</p>
                        <a href="/Products/Details/2" class="btn btn-outline-dark">View Details</a>
                    </div>
                </div>
            </div>

            <!-- Product 3 -->
            <div class="col">
                <div class="card h-100 text-center">
                    <img src="~/Images/woodland_b_m_2.jpg" class="card-img-top" alt="Woodland Shoes">
                    <div class="card-body">
                        <h5 class="card-title">Woodland Trekker</h5>
                        <p class="card-text">Strong grip, rugged look, all terrain ready.</p>
                        <a href="/Products/Details/3" class="btn btn-outline-dark">View Details</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</main>

<!-- Footer -->
<footer>
    <div class="container">
        <p class="mb-1">&copy; 2025 ShoeKart</p>
        <small>Made with ❤️ for shoe lovers. | <a href="/Contact">Contact Us</a></small>
    </div>
</footer>
