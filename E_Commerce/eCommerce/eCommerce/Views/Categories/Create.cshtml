@model Category
@{
    ViewData["Title"] = "Register Category";
}

<link rel="stylesheet" href="~/css/categorycat.css" />

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-lg register-card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-tag-fill me-2"></i> Register New Category</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label fw-semibold"></label>
                    <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <input asp-for="Description" class="form-control" placeholder="Short description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save me-1"></i> Register Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
